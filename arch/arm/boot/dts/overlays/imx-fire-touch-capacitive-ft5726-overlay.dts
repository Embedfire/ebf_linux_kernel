#include "../imx6ul-pinfunc.h"
#include "../imx6ull-pinfunc.h"
#include "../imx6ull-pinfunc-snvs.h"
#include "dt-bindings/interrupt-controller/irq.h"
#include "dt-bindings/gpio/gpio.h"
/dts-v1/;
/plugin/;

/ {
	 compatible = "fsl,imx6ull-14x14-evk", "fsl,imx6ull";

		fragment@0 {
			target = <&i2c1>;
			__overlay__ { 
				#address-cells = <1>;
				#size-cells = <0>;
				ft5726@38 {
					compatible = "evervision,ev-ft5726";
					pinctrl-0 = <&pinctrl_tsc_reset>;
					pinctrl-1 = <&pinctrl_tsc_irq>;
					reg = <0x38>;
					status = "okay";
					/*gpio*/
					reset-gpios = <&gpio4 26 GPIO_ACTIVE_LOW>;
					irq-gpios = <&gpio4 27 GPIO_ACTIVE_HIGH>;
					/*interruptÂ­*/
					interrupt-parent = <&gpio4>;
					interrupts = <27 IRQ_TYPE_EDGE_FALLING>;
					irq-flags = <2>;		/*1:rising 2: falling*/	
				};
			};
		};
		fragment@1 {
				target = <&iomuxc>;
				__overlay__ {
				pinctrl_tsc_reset: tscresetgrp {
					fsl,pins = <
						/* used for tsc reset */
						MX6UL_PAD_CSI_DATA05__GPIO4_IO26		0x05
					>;
				};
				pinctrl_tsc_irq: tsc_irq {
					fsl,pins = <
						MX6UL_PAD_CSI_DATA06__GPIO4_IO27        0x4001b8b0
					>;
				};
			};
		};
};

