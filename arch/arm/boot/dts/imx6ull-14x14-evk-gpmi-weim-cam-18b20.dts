#include "imx6ull-14x14-evk-gpmi-weim.dts"

/ {
	pwm_leds{
		compatible = "pwm-leds";
		status = "disable";

		red {
			label = "red";
			active-low;
			pwms = <&pwm3 0 5000>;
			max-brightness = <255>;
		};

		blue {
			label =  "blue";
			active-low;
			pwms = <&pwm7 0 5000>;
			max-brightness = <255>;
		};

		green {
			label = "green";
			active-low;
			pwms = <&pwm8 0 5000>;
			max-brightness = <255>;
		};
	};

	ds18b20{
		compatible = "w1-gpio";
		gpios = <&gpio1 2 GPIO_ACTIVE_LOW>;
		linux,open-drain;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_onewire>;
		status = "okay";
	};

	dht11{
		compatible = "dht11";
		gpios = <&gpio1 2 GPIO_ACTIVE_LOW>;
		linux,open-drain;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_onewire>;
		status = "disable";
	};
};

&pwm3 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm3>;
	status = "disable";
};

&pwm7 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm7>;
	status = "disable";
};

&pwm8 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm8>;
	status = "disable";
};

&i2c2 {
	ov5640: ov5640@3c {
		compatible = "ovti,ov5640";
		reg = <0x3c>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_csi1>;
		clocks = <&clks IMX6UL_CLK_CSI>;
		clock-names = "csi_mclk";
		pwn-gpios = <&gpio_spi 6 1>;
		rst-gpios = <&gpio_spi 5 0>;
		csi_id = <0>;
		mclk = <24000000>;
		mclk_source = <0>;
		status = "okay";    /* 摄像头使能 */
		port {
			ov5640_ep: endpoint {
				remote-endpoint = <&csi1_ep>;
			};
		};
	};
};

&csi {
	status = "okay";  /* 摄像头总线使能 */

	port {
		csi1_ep: endpoint {
			remote-endpoint = <&ov5640_ep>;
		};
	};
};
