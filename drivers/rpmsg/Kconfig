menu "Rpmsg drivers"

# RPMSG always gets selected by whoever wants it
config RPMSG
	tristate
	select VIRTIO
	select VIRTUALIZATION

config IMX_RPMSG_PINGPONG
	tristate "IMX RPMSG pingpong driver"
	depends on RPMSG && m

config IMX_RPMSG_TTY
	tristate "IMX RPMSG tty driver"
	depends on RPMSG && m

endmenu
